{
    "repository": {
      "templates": {
        "codeowners": {
          "enabled": true,
          "template": "default",
          "config": {
            "REPO_OWNERS": ["codevakure"]
          }
        },
        "pull_request": {
          "enabled": true,
          "template": "default"
        }
      }
    },
    "workflows": {
      "azure-boards-pr": {
        "enabled": true,
        "triggers": {
          "pull_request": {
            "types": ["opened", "reopened", "edited", "closed", "synchronize"]
          }
        },
        "config": {
          "branch_validation": {
            "validationNeeded": true,
            "githubComment": true
          }
        }
      }
    }
  }